<phpunit
    bootstrap="unit/_bootstrap.php"
    colors="false"
    stopOnFailure="false"
    testdox="true"
    verbose="true"
    backupStaticAttributes="false"
    backupGlobals="false">
    <testsuite name="library">
        <directory>unit/suite/library</directory>
    </testsuite>
    <testsuite name="plugins">
        <directory>unit/suite/plugins</directory>
    </testsuite>
</phpunit>
