<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="site"
	method="upgrade">
	<name>mod_orders_stats</name>
	<creationDate>##DATE##</creationDate>
	<author>redWEB Aps</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redcomponent.com</authorUrl>
	<copyright>(C) 2014 redCOMPONENT.com</copyright>
	<license>GNU/GPL</license>
	<version>##VERSION##</version>
	<description>MOD_ORDERS_STATS_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_orders_stats">mod_orders_stats.php</filename>
		<folder>language</folder>
		<folder>lib</folder>
		<folder>media</folder>
		<folder>tmpl</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/libraries/redform/form/fields">
				<field name="formIds"
				       type="textarea"
				       cols="30"
				       rows="15"
					label="MOD_ORDERS_STATS_XML_FORMS_LABEL"
					description="MOD_ORDERS_STATS_XML_FORMS_DESC">
				</field>

				<field name="nameFields"
				       type="redformfield"
				       multiple="1"
				       label="MOD_ORDERS_STATS_XML_NAME_FIELDS_LABEL"
				       description="MOD_ORDERS_STATS_XML_NAME_FIELDS_DESC">
				</field>

				<field name="companyFields"
				       type="redformfield"
				       multiple="1"
				       label="MOD_ORDERS_STATS_XML_COMPANY_FIELDS_LABEL"
				       description="MOD_ORDERS_STATS_XML_COMPANY_FIELDS_DESC">
				</field>

				<field name="companyGroups"
				       type="usergroup"
				       multiple="1"
				       label="MOD_ORDERS_STATS_XML_COMPANY_GROUPS_LABEL"
				       description="MOD_ORDERS_STATS_XML_COMPANY_GROUPS_DESC">
				</field>

				<field name="elFields"
				       type="redformfield"
				       multiple="1"
				       label="MOD_ORDERS_STATS_XML_ELECTRICITY_FIELDS_LABEL"
				       description="MOD_ORDERS_STATS_XML_ELECTRICITY_FIELDS_DESC">
				</field>

				<field name="gasFields"
				       type="redformfield"
				       multiple="1"
				       label="MOD_ORDERS_STATS_XML_GAS_FIELDS_LABEL"
				       description="MOD_ORDERS_STATS_XML_GAS_FIELDS_DESC">
				</field>
			</fieldset>

			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
