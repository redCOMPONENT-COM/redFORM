<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="2.5"
	client="site"
	method="upgrade">
	<name>mod_orders_company</name>
	<creationDate>##DATE##</creationDate>
	<author>redWEB Aps</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redcomponent.com</authorUrl>
	<copyright>(C) 2014 redCOMPONENT.com</copyright>
	<license>GNU/GPL</license>
	<version>##VERSION##</version>
	<description>Mod_orders_company_XML_DESCRIPTION</description>

	<files>
		<filename module="mod_orders_company">mod_orders_company.php</filename>
		<folder>language</folder>
		<folder>lib</folder>
		<folder>media</folder>
		<folder>tmpl</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/libraries/redform/form/fields">
				<field name="formIds"
				       type="redformform"
				       multiple="1"
					label="Mod_orders_company_XML_FORMS_LABEL"
					description="Mod_orders_company_XML_FORMS_DESC">
				</field>

				<field name="goal"
				       type="text"
				       label="Mod_orders_company_XML_goal_LABEL"
				       description="Mod_orders_company_XML_goal_DESC">
				</field>

				<field name="elFields"
				       type="redformfield"
				       multiple="1"
				       label="Mod_orders_company_XML_ELECTRICITY_FIELDS_LABEL"
				       description="Mod_orders_company_XML_ELECTRICITY_FIELDS_DESC">
				</field>

				<field name="cancelledElec"
					   type="textarea"
					   label="Mod_orders_company_XML_cancelledElec_LABEL"
					   description="Mod_orders_company_XML_cancelledElec_DESC">
				</field>

				<field name="gasFields"
				       type="redformfield"
				       multiple="1"
				       label="Mod_orders_company_XML_GAS_FIELDS_LABEL"
				       description="Mod_orders_company_XML_GAS_FIELDS_DESC">
				</field>

				<field name="cancelledGas"
					   type="textarea"
					   label="Mod_orders_company_XML_cancelledGas_LABEL"
					   description="Mod_orders_company_XML_cancelledGas_DESC">
				</field>
			</fieldset>

			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field
					name="cache"
					type="list"
					default="0"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
