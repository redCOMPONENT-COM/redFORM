<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://www.joomla.org/xml/dtd/1.5/component-install.dtd">
<install type="component" version="1.5" method="upgrade">
	<name>redFORM</name>
	<creationDate>22/09/2009</creationDate>
	<author>Redweb.dk</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redweb.dk</authorUrl>
	<copyright>(c) 2008 - 2009 Redweb.dk</copyright>
	<license>GNU/GPL</license>
	<version>2.0 beta 5.2</version>
	<description>redFORM allows you to create dynamic forms on your Joomla 1.5 website with integrations to redEVENT, redCOMPETITION and the newsletter components Acajoom, ccNewsletter and the open source mailinglist system PHPlist.</description>
	<!-- Custom installer -->
	<installfile>install.redform.php</installfile>
	
	<!-- Custom uninstaller -->
	<uninstallfile>uninstall.redform.php</uninstallfile>
	
	<!-- SQL queries -->
	<install>
		<sql>
			<file driver="mysql" charset="utf8">install.mysql.utf8.sql</file>
		</sql>
	</install>
	
	<!-- Uninstall SQL queries -->
	<uninstall>
		<sql>
		</sql>
	</uninstall>
	
	<!-- Core files site -->
	<files folder="site">
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>redform.php</filename>
    <folder>classes</folder>
		<folder>controllers</folder>
		<folder>helpers</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	
	<!-- Language files -->
	<languages folder="site/languages">
		<language tag="en-GB">en-GB.com_redform.ini</language>
		<language tag="da-DK">da-DK.com_redform.ini</language>
		<language tag="de-DE">de-DE.com_redform.ini</language>
		<language tag="nl-NL">nl-NL.com_redform.ini</language>
	</languages>
	
	<!-- Image files -->
	<!-- These are actually for the administrator but this is not supported by Joomla -->
	<media folder="admin/images" destination="com_redform">
		<filename>redform_answers_16.png</filename>
		<filename>redform_answers_32.png</filename>
		<filename>redform_answers_48.png</filename>
		<filename>redform_contes_16.png</filename>
		<filename>redform_contes_32.png</filename>
		<filename>redform_contes_48.png</filename>
		<filename>redform_details_16.png</filename>
		<filename>redform_details_32.png</filename>
		<filename>redform_details_48.png</filename>
		<filename>redform_plus_16.png</filename>
		<filename>redform_plus_32.png</filename>
		<filename>redform_plus_48.png</filename>
		<filename>redform_quest_16.png</filename>
		<filename>redform_quest_32.png</filename>
		<filename>redform_quest_48.png</filename>
		<filename>redform_red_16.png</filename>
		<filename>redform_red_32.png</filename>
		<filename>redform_red_48.png</filename>
		<filename>logoredform_400.png</filename>
		<filename>logoredform_800.png</filename>
		<filename>logoredform_1200.png</filename>
	</media>
	
	<administration>
	<!-- Menu entries -->
	<menu img="../media/com_redform/redform_red_16.png" view="forms">redFORM</menu>
	<submenu>
		<menu img="../media/com_redform/redform_red_16.png" view="forms">redFORM</menu>
		<menu img="../media/com_redform/redform_quest_16.png" view="fields">Fields</menu>
		<menu img="../media/com_redform/redform_answers_16.png" view="values">Values</menu>
		<menu img="../media/com_redform/redform_contes_16.png" view="submitters">Submitters</menu>
		<menu img="../media/com_redform/redform_red_16.png" view="configuration">Configuration</menu>
	</submenu>
	
	<!-- Core files admin -->
	<files folder="admin">
		<filename>changelog.txt</filename>
		<filename>controller.php</filename>
		<filename>install.mysql.utf8.sql</filename>
		<filename>LICENSE.php</filename>
		<filename>redform.php</filename>
		<folder>controllers</folder>
		<folder>css</folder>
		<folder>helpers</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>models</folder>
		<folder>plugins</folder>
		<folder>tables</folder>
		<folder>views</folder>
	</files>
	
	<!-- Language files -->
	<languages folder="admin/languages">
		<language tag="en-GB">en-GB.com_redform.ini</language>
		<language tag="en-GB">en-GB.com_redform.menu.ini</language>
		<language tag="da-DK">da-DK.com_redform.ini</language>
		<language tag="da-DK">da-DK.com_redform.menu.ini</language>
		<language tag="nl-NL">nl-NL.com_redform.ini</language>
		<language tag="nl-NL">nl-NL.com_redform.menu.ini</language>
		<language tag="de-DE">de-DE.com_redform.ini</language>
		<language tag="de-DE">de-DE.com_redform.menu.ini</language>
	</languages>
	</administration>
</install>