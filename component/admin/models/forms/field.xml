<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
			addfieldpath="/libraries/redform/form/fields"
			name="details">
		<field
				name="id"
				type="hidden"
				default="0"
				label="COM_REDFORM_FIELD_NAME"
				description="COM_REDFORM_FIELD_NAME_TIP"
				readonly="true"
				/>
		<field
				name="field"
				type="text"
				label="COM_REDFORM_FIELD_NAME"
				description="COM_REDFORM_FIELD_NAME_TIP"
				required="true"
				maxlength="255"
				/>
		<field
				name="field_header"
				type="text"
				label="COM_REDFORM_COM_REDEVENT_FIELD_FORM_FIELD_HEADER_LABEL"
				description="COM_REDFORM_COM_REDEVENT_FIELD_FORM_FIELD_HEADER_DESC"
				required="false"
				maxlength="255"
				/>
		<field
				name="form_id"
				type="rdfform"
				label="COM_REDFORM_Form"
				description="COM_REDFORM_COM_REDEVENT_FIELD_SELECT_FORM_DESC"
				required="true"
				/>
		<field
				name="fieldtype"
				type="rdffieldtype"
				label="COM_REDFORM_FIELD_TYPE"
				description="COM_REDFORM_FIELD_TYPE"
				required="true"
				/>
		<field
				name="tooltip"
				type="textarea"
				label="COM_REDFORM_ENTER_TOOLTIP"
				description="COM_REDFORM_ENTER_TOOLTIP_INFO"
				cols="80"
				rows="5"
				/>
		<field
				name="validate"
				type="radio"
				label="COM_REDFORM_REQUIRED"
				description="COM_REDFORM_FIELD_REQUIRED_TIP"
				default="0"
				>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
				name="unique"
				type="radio"
				label="COM_REDFORM_UNIQUE"
				description="COM_REDFORM_FIELD_UNIQUE_TIP"
				default="0"
				>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
				name="readonly"
				type="radio"
				label="COM_REDFORM_FIELD_READONLY"
				description="COM_REDFORM_FIELD_READONLY_TIP"
				default="0"
				>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
				name="default"
				type="textarea"
				label="COM_REDFORM_FIELD_DEFAULT_VALUE"
				description="COM_REDFORM_FIELD_DEFAULT_VALUE_TIP"
				cols="80"
				rows="5"
				/>
		<field
				name="redmember_field"
				type="rpublished"
				label="COM_REDFORM_FIELD_PUBLISHED"
				description="COM_REDFORM_FIELD_PUBLISHED_TIP"
				/>
		<field
				name="published"
				type="rdfredmemberfield"
				label="COM_REDFORM_REDMEMBER_FIELD"
				description="COM_REDFORM_SELECT_REDMEMBER_FIELD"
				maxlength="255"
				/>
		<field
				name="params"
				type="hidden"
				/>
	</fieldset>
</form>
