<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset
			addfieldpath="/libraries/redform/form/fields"
			name="details">
		<field
				name="id"
				type="hidden"
				default="0"
				label=""
				description=""
				readonly="true"
				/>
		<field
				name="field"
				type="text"
				label="COM_REDFORM_FORMS_XML_FIELD_NAME"
				description="COM_REDFORM_FORMS_XML_FIELD_NAME_DESC"
				required="true"
				maxlength="255"
				/>
		<field
				name="field_header"
				type="text"
				label="COM_REDFORM_FORMS_XML_FIELD_HEADER"
				description="COM_REDFORM_FORMS_XML_FIELD_HEADER_DESC"
				required="false"
				maxlength="255"
				/>
		<field
				name="form_id"
				type="redformform"
				label="COM_REDFORM_FORMS_XML_FIELD_FORM"
				description="COM_REDFORM_FORMS_XML_FIELD_FORM_DESC"
				required="true"
				/>
		<field
				name="fieldtype"
				type="redformfieldtype"
				label="COM_REDFORM_FORMS_XML_FIELD_TYPE"
				description="COM_REDFORM_FORMS_XML_FIELD_TYPE_DESC"
				required="true"
                onchange="submitform('field.setType');"
				/>
		<field
				name="tooltip"
				type="textarea"
				label="COM_REDFORM_FORMS_XML_FIELD_TOOLTIP"
				description="COM_REDFORM_FORMS_XML_FIELD_TOOLTIP_DESC"
				cols="80"
				rows="5"
				/>
		<field
				name="validate"
				type="radio"
				label="COM_REDFORM_FORMS_XML_FIELD_REQUIRED"
				description="COM_REDFORM_FORMS_XML_FIELD_REQUIRED_DESC"
                class="btn-group"
				default="0"
				>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
				name="unique"
				type="radio"
				label="COM_REDFORM_FORMS_XML_FIELD_UNIQUE"
				description="COM_REDFORM_FORMS_XML_FIELD_UNIQUE_DESC"
                class="btn-group"
				default="0"
				>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
				name="readonly"
				type="radio"
				label="COM_REDFORM_FORMS_XML_FIELD_READONLY"
				description="COM_REDFORM_FORMS_XML_FIELD_READONLY_DESC"
                class="btn-group"
				default="0"
				>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
				name="default"
				type="textarea"
				label="COM_REDFORM_FORMS_XML_FIELD_DEFAULT_VALUE"
				description="COM_REDFORM_FORMS_XML_FIELD_DEFAULT_VALUE_DESC"
				cols="80"
				rows="5"
				/>
		<field
				name="published"
				type="rpublished"
				label="COM_REDFORM_FORMS_XML_FIELD_PUBLISHED"
				description="COM_REDFORM_FORMS_XML_FIELD_PUBLISHED_DEC"
				/>
		<field
				name="redmember_field"
				type="rdfredmemberfield"
				label="COM_REDFORM_FORMS_XML_FIELD_REDMEMBER_FIELD"
				description="COM_REDFORM_FORMS_XML_FIELD_REDMEMBER_FIELD_DESC"
				maxlength="255"
				/>
		<field
				name="params"
				type="hidden"
				/>
	</fieldset>
</form>
