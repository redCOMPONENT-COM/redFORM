<?xml version="1.0" encoding="UTF-8"?>
<project name="redFORM" default="travis" basedir=".">

    <property name="basedir" value="." />

    <target name="travis" description="Generate codestyle report using PHP_CodeSniffer for output on Travis-CI">

        <property name="phpcs-ignore"
                  value="${basedir}/.travis,${basedir}/tests,${basedir}/media,${basedir}/redCORE,${basedir}/component/admin/views/*/tmpl/*,${basedir}/component/admin/layouts,${basedir}/plugins/,${basedir}/build,${basedir}/component/site/layouts"
                />

        <exec executable="phpcs" passthru="true">
            <arg line="-p" />
            <arg line="-w" />
            <arg value="--report=full"/>
            <arg value="--extensions=php"/>
            <arg value="--standard=${basedir}/.travis/phpcs/Joomla/ruleset.xml"/>
            <arg value="--ignore=${phpcs-ignore}"/>
            <arg path="${basedir}"/>
        </exec>
    </target>
</project>
