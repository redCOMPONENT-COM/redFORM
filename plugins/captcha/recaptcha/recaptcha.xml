  "-//Joomla! 1.5//DTD plugin 1.0//EN" "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="redform_captcha" method="upgrade">
  <name>Redform recaptcha plugin</name>
	<creationDate>Oct 28, 2010</creationDate>
	<author>Redweb.dk</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redweb.dk</authorUrl>
	<copyright>(c) 2010 Redweb.dk</copyright>
	<license>GNU/GPL</license>
	<version>2.0 beta 8.2</version>
  <description>PLUGIN DESC</description>
  
  <files>
    <filename plugin="recaptcha">recaptcha.php</filename>
    <folder>recaptcha</folder>
  </files>
    
  <languages>
    <language tag="en-GB">languages/en-GB.plg_redform_captcha_recaptcha.ini</language>
  </languages>

  <params>
  	<param name="public_key" type="text" default="" label="PLG_REDFORM_CAPTCHA_RECAPTCHA_PUBLICKEY" description="PLG_REDFORM_CAPTCHA_RECAPTCHA_PUBLICKEY_DESC" />
  	<param name="private_key" type="text" default="" label="PLG_REDFORM_CAPTCHA_RECAPTCHA_PRIVATEKEY" description="PLG_REDFORM_CAPTCHA_RECAPTCHA_PRIVATEKEY_DESC" />
  </params>
</install>
