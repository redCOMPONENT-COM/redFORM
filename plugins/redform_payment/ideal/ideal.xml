				      <option value="1">Yes</option>
			    </field>

			  <field name="allowed_currencies" type="textarea"
					 label="COM_REDFORM_XML_PLUGIN_PAYMENT_ALLOWED_CURRENCIES"
					 description="COM_REDFORM_XML_PLUGIN_PAYMENT_ALLOWED_CURRENCIES_DESC"
					 rows="10"
					  />
