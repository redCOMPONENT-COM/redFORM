    <files>
        <filename plugin="gaselkmd">gaselkmd.php</filename>
        <folder>language</folder>
    </files>

    <config>
        <fields name="params">
            <fieldset name="basic" label="basic">

                <field name="formids" type="text" default=""
                       label="PLG_REDFORM_GASELKMD_FORMIDS"
                       description="PLG_REDFORM_GASELKMD_FORMIDS_DESC"/>

                 <field name="mapping" type="textarea"
                        label="PLG_REDFORM_GASELKMD_MAPPING"
                        description="PLG_REDFORM_GASELKMD_MAPPING_DESC"
                        rows="20"/>

                <field name="debug" type="radio" default="0"
                       label="PLG_REDFORM_GASELKMD_DEBUG"
                       description="PLG_REDFORM_GASELKMD_DEBUG_DESC">
                    <option value="0">JNo</option>
                    <option value="1">JYes</option>
