<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="redform_captcha" method="upgrade">
	<name>PLG_REDFORM_CAPTCHA_HCAPTCHA</name>
	<creationDate>December 8, 2020</creationDate>
	<author>redWEB Aps</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redcomponent.com</authorUrl>
	<copyright>(C) 2008 - 2020 redCOMPONENT.com</copyright>
	<license>GNU/GPL</license>
	<version>1.0.0</version>
	<description>PLG_REDFORM_CAPTCHA_HCAPTCHA_XML_DESCRIPTION</description>
	<files>
		<filename plugin="hcaptcha">hcaptcha.php</filename>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="siteKey"
					   type="text"
					   required="true"
					   label="PLG_REDFORM_CAPTCHA_HCAPTCHA_SITE_KEY"
					   description="PLG_REDFORM_CAPTCHA_HCAPTCHA_SITE_KEY_DESC" />
				<field name="secretKey"
					   type="text"
					   required="true"
					   label="PLG_REDFORM_CAPTCHA_HCAPTCHA_SECRET_KEY"
					   description="PLG_REDFORM_CAPTCHA_HCAPTCHA_SECRET_KEY_DESC" />
				<field name="theme"
					   type="radio"
					   class="btn-group btn-group-yesno"
					   default="light"
					   label="PLG_REDFORM_CAPTCHA_HCAPTCHA_THEME">
					<option value="light">PLG_REDFORM_CAPTCHA_HCAPTCHA_THEME_LIGHT</option>
					<option value="dark">PLG_REDFORM_CAPTCHA_HCAPTCHA_THEME_DARK</option>
				</field>
				<field name="size"
					   type="radio"
					   default="normal"
					   class="btn-group btn-group-yesno"
					   label="PLG_REDFORM_CAPTCHA_HCAPTCHA_SIZE"
					   >
					<option value="normal">PLG_REDFORM_CAPTCHA_HCAPTCHA_SIZE_NORMAL</option>
					<option value="compact">PLG_REDFORM_CAPTCHA_HCAPTCHA_SIZE_COMPACT</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
