<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="redform_payment"
	method="upgrade">
	<name>PLG_REDFORM_PAYMENT_IDEAL</name>
	<creationDate>jan, 2012</creationDate>
	<author>redWEB Aps</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redcomponent.com</authorUrl>
	<copyright>(C) 2008 - 2012 redCOMPONENT.com</copyright>
	<license>GNU/GPL</license>
	<version>2.5</version>
	<description>PLG_REDFORM_PAYMENT_IDEAL_XML_DESCRIPTION</description>

	<files>
		<filename plugin="ideal">ideal.php</filename>
		<folder>ideal</folder>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="extra" label="extra">
				<field name="partner_id" type="text" default=""
					label="IDEAL_CFG_PAYMENT_PARTNERID" description="IDEAL_CFG_PAYMENT_PARTNERID_DESC" />
				<field name="profile_key" type="text" default=""
					label="IDEAL_CFG_PAYMENT_PROFILEKEY" description="IDEAL_CFG_PAYMENT_PROFILEKEY_DESC" />
				<field name="testmode" type="radio" default="1"
					label="IDEAL_CFG_PAYMENT_TESTMODE" description="IDEAL_CFG_PAYMENT_TESTMODE_DESC">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="inc_languages"
				       type="language"
				       multiple="true"
				       size="5"
				       label="PLG_REDFORM_PAYMENT_INCLUDE_LANGUAGES" description="PLG_REDFORM_PAYMENT_INCLUDE_LANGUAGES_DESC">
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
