<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC 
  "-//Joomla! 1.5//DTD plugin 1.0//EN" "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install version="1.5" type="plugin" group="redform_payment" method="upgrade">
  <name>Redform custom payment plugin</name>
	<creationDate>Fev 3, 2010</creationDate>
	<author>Redweb.dk</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redweb.dk</authorUrl>
	<copyright>(c) 2008 - 2009 Redweb.dk</copyright>
	<license>GNU/GPL</license>
	<version>2.0 beta 8.2</version>
  <description>PLUGIN DESC</description>
  
  <files>
    <filename plugin="custom">custom.php</filename>
    <folder>custom</folder>
  </files>
    
  <languages>    
  	<language tag="en-GB">languages/en-GB.plg_redform_payment_custom.ini</language>
  </languages>

  <params>    
    <param name="gatewaylabel" type="text" default="Bank transfer, check..." label="CUSTOM_CFG_GATEWAY_LABEL" description="CUSTOM_CFG_GATEWAY_LABEL_DESC" />  
    <param name="instructions" type="textarea" rows="10" cols="40" default="" label="CUSTOM_CFG_INSTRUCTIONS" description="CUSTOM_CFG_INSTRUCTIONS_DESC" />  
  </params>
  
</install>
