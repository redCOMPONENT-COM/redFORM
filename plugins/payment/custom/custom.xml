<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="redform_payment"
	method="upgrade">
	<name>PLG_REDFORM_PAYMENT_CUSTOM</name>
	<creationDate>jan, 2012</creationDate>
	<author>redWEB Aps</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redcomponent.com</authorUrl>
	<copyright>(C) 2008 - 2012 redCOMPONENT.com</copyright>
	<license>GNU/GPL</license>
	<version>2.5</version>
	<description>PLG_REDFORM_PAYMENT_CUSTOM_XML_DESCRIPTION</description>

	<files>
		<filename plugin="custom">custom.php</filename>
		<folder>custom</folder>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>

	<config>
		<fields name="params">
			<fieldset name="extra" label="extra">
				<field name="gatewaylabel" type="text" default="Bank transfer, check..."
					label="CUSTOM_CFG_GATEWAY_LABEL" description="CUSTOM_CFG_GATEWAY_LABEL_DESC" />
				<field name="instructions" type="textarea" rows="10" cols="40"
					default="" label="CUSTOM_CFG_INSTRUCTIONS" description="CUSTOM_CFG_INSTRUCTIONS_DESC" />

				<field name="inc_languages"
				       type="language"
				       multiple="true"
				       size="5"
				       label="PLG_REDFORM_PAYMENT_INCLUDE_LANGUAGES" description="PLG_REDFORM_PAYMENT_INCLUDE_LANGUAGES_DESC">
				</field>
			</fieldset>
		</fields>
	</config>

</extension>
