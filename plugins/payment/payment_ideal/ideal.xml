	<creationDate>Fev 3, 2010</creationDate>
	<author>Redweb.dk</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redweb.dk</authorUrl>
	<copyright>(c) 2008 - 2009 Redweb.dk</copyright>
	<license>GNU/GPL</license>
	<version>2.0 beta 8.2</version>
  <description>PLUGIN DESC</description>
  
  <files>
    <filename plugin="ideal">ideal.php</filename>
    <folder>ideal</folder>
  </files>
    
  <languages>    
  	<language tag="en-GB">languages/en-GB.plg_redform_payment_ideal.ini</language>
  </languages>

  <params>    
    <param name="partner_id" type="text" default="" label="IDEAL_CFG_PAYMENT_PARTNERID" description="IDEAL_CFG_PAYMENT_PARTNERID_DESC" />  
    <param name="profile_key" type="text" default="" label="IDEAL_CFG_PAYMENT_PROFILEKEY" description="IDEAL_CFG_PAYMENT_PROFILEKEY_DESC" />  
    <param name="testmode" type="radio" default="1" label="IDEAL_CFG_PAYMENT_TESTMODE" description="IDEAL_CFG_PAYMENT_TESTMODE_DESC">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
  </params>
  
</install>
