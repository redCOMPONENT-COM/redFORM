<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC 
  "-//Joomla! 1.5//DTD plugin 1.0//EN" "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<extension version="1.5" type="plugin" group="redform_payment" method="upgrade">
  <name>Redform paypal gateway plugin</name>
	<creationDate>Fev 3, 2010</creationDate>
	<author>Redweb.dk</author>
	<authorEmail>email@redweb.dk</authorEmail>
	<authorUrl>www.redweb.dk</authorUrl>
	<copyright>(c) 2008 - 2009 Redweb.dk</copyright>
	<license>GNU/GPL</license>
	<version>2.0 beta 8.2</version>
  <description>PLUGIN DESC</description>
  
  <files>
    <filename plugin="paypal">paypal.php</filename>
    <folder>paypal</folder>
  </files>
    
  <languages>    
  	<language tag="en-GB">languages/en-GB.plg_redform_payment_paypal.ini</language>
  </languages>

  <config><fields name="params"><fieldset name="basic" label="basic">    
    <field name="paypal_account" type="text" default="" label="PAYPAL_ACCOUNT" description="PAYPAL_ACCOUNT_DESC" />
    <field name="paypal_sandbox" type="radio" default="1" label="PAYPAL_USE_SANDBOX" description="PAYPAL_USE_SANDBOX_DESC">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </field>
  </fieldset></fields></config>
  
</extension>
